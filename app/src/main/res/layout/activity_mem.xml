<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.example.anast.ewnp.MemActivity"
android:background="#a9cffa">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/homemem"
        android:src="@drawable/homepage"
        android:background="#a9cffa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="58dp"
    android:textColor="#000766"
    android:text="Theme"
    android:textSize="35dp"
    android:background="#a9cffa"
    android:id="@+id/myidtextView"
        android:foregroundGravity="center"
    android:gravity="center"
    android:layout_weight="3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/homemem"
        android:layout_toLeftOf="@+id/soundsbut"
        android:layout_toStartOf="@+id/soundsbut"
        android:layout_toEndOf="@+id/homemem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sorry, but we have no sound for this word"
        android:id="@+id/error"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/homemem"
        android:textColor="#ff0000"
        android:textAlignment="center"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/soundsbut"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:background="#a9cffa"
        android:src="@drawable/question"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/myidtextView" />

    <ImageButton
        android:id="@+id/prevbut"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_row="0"
        android:textSize="30dp"
        android:src="@drawable/left"
        android:textColor="#ffffff"
        android:background="#a9cffa"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/error" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/nextbut"
        android:layout_toEndOf="@+id/prevbut"
        android:layout_toStartOf="@+id/nextbut"
        android:layout_below="@+id/error">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000766"
            android:text="engtext"
            android:textSize="40dp"
            android:background="#a9cffa"
            android:id="@+id/engtext"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000766"
            android:text="rustext"
            android:textSize="40dp"
            android:background="#a9cffa"
            android:id="@+id/rustext"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_below="@+id/engtext"
            android:layout_alignLeft="@+id/engtext"
            android:layout_alignStart="@+id/engtext" />
    </TableLayout>

    <ImageButton
    android:id="@+id/nextbut"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_row="0"
    android:layout_gravity="center_vertical|right"
    android:background="#a9cffa"
    android:src="@drawable/right"
    android:textSize="30dp"
    android:textColor="#ffffff"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/error" />


</RelativeLayout>