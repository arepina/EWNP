<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anast.ewnp.MainActivity"
    android:background="#a9cffa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000766"
        android:text="Exams with no problem"
        android:textSize="40dp"
        android:background="#a9cffa"
        android:id="@+id/myidtextView"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center"
        android:layout_weight="1" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
            <Button
                android:id="@+id/taskbut"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_row="0"
                android:text="Tasks"
                android:layout_gravity="center"
                android:background="#73aae9"
                android:textSize="30dp"
                android:textColor="#ffffff" />
            <Button
                android:id="@+id/infobut"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_row="0"
                android:layout_marginLeft="10dp"
                android:text="Info"
                android:layout_gravity="center"
                android:background="#73aae9"
                android:textSize="30dp"
                android:layout_column="1"
                android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RuslangChange"
            android:src="@drawable/russia"
            android:background="#a9cffa"
            android:layout_gravity="center_vertical"
            android:layout_column="0"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EnglangChange"
            android:src="@drawable/uk"
            android:background="#a9cffa"
            android:layout_gravity="center_vertical"
            android:layout_column="1"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/contact"
            android:src="@drawable/mail"
            android:background="#a9cffa"
            android:layout_gravity="center|right"
            android:layout_column="2"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/exit"
            android:src="@drawable/exit"
            android:layout_gravity="center|right"
            android:layout_column="3"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="#a9cffa" />
    </TableRow>


</TableLayout>
